# Railway PostgreSQL Configuration (PRODUCTION)
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Auth Configuration - REQUIRED IN PRODUCTION
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="CHANGE_THIS_TO_A_64_CHAR_RANDOM_STRING"
JWT_EXPIRES_IN="7d"

# Session Configuration
SESSION_SECRET="CHANGE_THIS_TO_A_SECURE_RANDOM_STRING"

# File Storage Configuration (Railway Volume)
STORAGE_PATH="/app/storage"
MAX_FILE_SIZE="10485760"

# Server Configuration
PORT="3001"
NODE_ENV="production"

# Frontend URL (for CORS) - REQUIRED
FRONTEND_URL="https://your-production-domain.com"
