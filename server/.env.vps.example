# ============================================
# St. Francis Portal - VPS Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Server Configuration
# ============================================
NODE_ENV=production
PORT=3001
API_URL=https://api.sfxsai.com

# ============================================
# Database (PostgreSQL)
# ============================================
# Option 1: Keep using Railway PostgreSQL
DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Local PostgreSQL on VPS
# DATABASE_URL=postgresql://stfrancis:your_password@localhost:5432/stfrancis

# ============================================
# Security
# ============================================
# REQUIRED: Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# ============================================
# Frontend URL (for CORS)
# ============================================
FRONTEND_URL=https://sfxsai.com

# ============================================
# File Storage
# ============================================
STORAGE_PATH=/var/www/stfrancis/storage
MAX_FILE_SIZE=52428800

# ============================================
# Email (Resend)
# ============================================
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=St. Francis Portal <noreply@sfxsai.com>

# ============================================
# Zoom Integration (Optional)
# ============================================
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_ACCOUNT_ID=

# ============================================
# AI Services (Optional)
# ============================================
OPENAI_API_KEY=sk-xxxxxxxxxxxx

# ============================================
# External Integrations (Optional)
# ============================================
TACTICALRMM_URL=
TACTICALRMM_API_KEY=

NOCODB_URL=
NOCODB_API_KEY=

DOCUMIZE_URL=

OMADA_URL=
